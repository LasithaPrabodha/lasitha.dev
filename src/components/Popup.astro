---
import IconLink from "./IconLink.astro";
import { nanoid } from "nanoid";
const uid = nanoid();

const { icon, text } = Astro.props;
---

<div class="popup">
  <span id={uid}>
    <IconLink ariaLabel={text} icon={icon} />
  </span>

  <span class="popuptext" id={"popupContent" + uid}>
    {text}
  </span>
</div>

<style>
  #popIcon {
    cursor: pointer;
  }
  .popup {
    position: relative;
    display: inline-block;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .popup .popuptext {
    visibility: hidden;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 2px 8px;
    position: absolute;
    z-index: 1;
    bottom: 125%;
    left: 0%;
    font-size: 0.9em;
    border: 2px solid #7f7f9f;
  }

  .popup .popuptext::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 7%;
    margin-left: -5px;
    border-width: 5px;
    border-style: solid;
    border-color: #7f7f9f transparent transparent transparent;
  }

  .popup .show {
    visibility: visible;
  }
</style>
<script define:vars={{ uid }}>
  const icon = document.getElementById(uid);

  icon.addEventListener("click", (_) => {
    var popup = document.getElementById("popupContent" + uid);
    popup.classList.toggle("show");
  });
</script>
