---
const { width = 320, height = 320, ...props } = Astro.props;
---

<svg
  width={width}
  height={height}
  fill="none"
  viewBox={`0 0 ${width} ${height}`}
  aria-hidden="true"
  {...props}
  class="rect-pattern"
>
  <defs>
    <pattern
      id="square-pattern"
      x="0"
      y="0"
      width="20"
      height="20"
      patternUnits="userSpaceOnUse"
    >
      <rect
        x="0"
        y="0"
        width="4"
        height="4"
        class="text-faded"
        fill="currentColor"></rect>
    </pattern>
  </defs>
  <rect width={width} height={height} fill="url(#square-pattern)"></rect>
</svg>

<style>
  svg {
    display: block;
    width: auto;
    color: #ccc;
  }
</style>
