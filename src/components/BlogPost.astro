---
import FormattedDate from "./FormattedDate.astro";

const { post } = Astro.props;
---

<a class="blog-post bg-[color:var(--clr-bg)]" href={`/blog/${post.slug}/`}>
  <div class="mb-4">
    <FormattedDate date={post.data.pubDate} />
    <h4 class="mt-2">{post.data.title}</h4>
  </div>
  <p>{post.data.description}</p>

  <p class="btn-read-story text-[color:var(--clr-grd-one)] mb-2">Read Full Story</p>
</a>
<style>
  .blog-post {
    transition: opacity ease-in 0.2s;
    padding: 1em;
    transition: box-shadow ease-in 0.2s;
    box-shadow: unset;
    border-radius: 8px;
  }
  .blog-post:hover {
    /* opacity: 1 !important; */

    box-shadow: var(--shadow);
  }
</style>
