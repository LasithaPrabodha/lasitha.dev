---
import Page from "@layouts/Page.astro";
import MyName from "@components/MyName.astro";
import ContactIcons from "@components/ContactIcons.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "consts";

import angular from "@assets/images/tech-stack/angular.png";
import react from "@assets/images/tech-stack/react.png";
import typescript from "@assets/images/tech-stack/Typescript.png";
import csharp from "@assets/images/tech-stack/C_Sharp.png";
import dontnetcore from "@assets/images/tech-stack/NET_Core.png";
import azure from "@assets/images/tech-stack/azure.png";
import { Image } from "astro:assets";
---

<Page
  metaTitle={SITE_TITLE}
  metaDescription={SITE_DESCRIPTION}
  transition:animate="slide"
  class="min-h-screen max-sm:pt-8 max-sm:ml-4 max-sm:mr-4 flex-col overflow-hidden bg-transparent center"
>
  <h1 class="text-5xl max-sm:text-4xl">
    Hi, I am <MyName />
  </h1>
  <h2 class="text-[2.4rem] max-sm:text-3xl max-sm:mt-4 text-[color:var(--clr-quote)]">
    I build things for web and mobile
  </h2>
  <p class="mt-6">A software engineer specializing in building exceptional digital experiences</p>

  <a href="/blog" class="button-container z-0 my-0 mt-4 mx-auto w-[200px]">
    <span class="mas">Check out my blog!</span>
    <button type="button" name="Hover">Check out my blog!</button>
  </a>

  <div class="flex gap-4 sm:gap-8 mt-20">
    <Image format="avif" src={angular} alt="Angular" height={35} />
    <Image format="avif" src={react} alt="React" height={35} />
    <Image format="avif" src={typescript} alt="TypeScript" height={35} />
    <Image format="avif" src={csharp} alt="C#" height={35} />
    <Image format="avif" src={dontnetcore} alt=".NET Core" height={35} />
    <Image format="avif" src={azure} alt="Azure" height={35} />
  </div>
</Page>
<style>
  @media (max-width: 640px) {
    img {
      height: 30px;
      width: 100%;
    }
  }
</style>
