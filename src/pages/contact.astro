---
import Page from "@layouts/Page.astro";
import ContactIcons from "@components/ContactIcons.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "consts";
---

<Page
  title={"Contact - " + SITE_TITLE}
  description={SITE_DESCRIPTION}
  addNight={true}
  class="max-sm:mt-8 max-sm:ml-4 max-sm:mr-4 flex-col overflow-hidden bg-transparent center"
>
  <div transition:animate="fade" class="fixed-height pt-12">
    <h2 class="section-title font-bold">Contact Me</h2>

    <div class="flex flex-col items-center" id="contact">
      <p class="mt-10">
        Interested in working together? <br /> We should queue up a time to chat. I'll buy the coffee.
      </p>

      <a href="mailto:lasiprabo@gmail.com" class="button-container mb-12 z-0 w-[170px]">
        <span class="mas">Let's do this! 🤘🏼</span>
        <button type="button" name="Hover">Let's do this! 🤘🏼</button>
      </a>
      <ContactIcons />
    </div>
  </div>
</Page>
