---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import ScrollToTop from "@components/ScrollToTop.astro";

const { metaTitle, metaDescription, animate, ...props } = Astro.props;

const theme = Astro.cookies.get("theme")?.value || "";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={metaTitle} description={metaDescription} />
  </head>
  <body class="relative" id="top" data-theme={theme}>
    <Header animate={animate} />
    <main
      {...props}
      class="flex relative min-h-screen flex-col flex-1 w-full m-auto box-border pt-6 px-6 sm:pt-0 pb-6 max-w-[900px] max-sm:pb-8 bg-transparent"
    >
      <slot />
    </main>
    <slot name="outside-main" />
    <Footer />
    <ScrollToTop />
  </body>
</html>
